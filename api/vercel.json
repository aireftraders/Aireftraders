{
  "version": 2,
  "builds": [
    { "src": "frontend/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "PAYSTACK_SECRET_KEY": "@paystack-secret-key",
    "PAYSTACK_WEBHOOK_SECRET": "@paystack-webhook-secret"
  }
}